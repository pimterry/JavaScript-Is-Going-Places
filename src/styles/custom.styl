ul
  width: 100%

ul.big-list
  padding-top: 0.8em
  text-align: left;
  font-size: 120%;

small
  font-size: 40%

.code-aligned
  width: 100%;
  text-align: left;
  padding-left: 25.8%;

.codeAndLabel
  clear: both

  label
    float: left
    width: 26%
    padding: 15px 10px 0 0
    text-align: right
    font-weight: bolder

  pre
    float: right
    width: 74%

.pairs
  position: relative

  :first-child
    width: 45%
    padding-right: 5px;
    display: inline-block
    text-align: right

  :last-child
    width: 45%
    padding-left: 5px;
    display: inline-block
    text-align: left