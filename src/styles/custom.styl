ul
  width: 100%

ul.big-list
  padding-top: 0.8em
  text-align: left;
  font-size: 120%;

small
  font-size: 40%

.code-aligned
  width: 100%;
  text-align: left;
  padding-left: 23%;

.codeAndLabel
  clear: both

  label
    font-size: 95%;
    float: left
    width: 25%
    padding: 10px 10px 0 0
    margin-left: -2%;
    text-align: right
    font-weight: bolder

  pre
    float: right
    width: 77%

.pairs
  position: relative

  :first-child
    width: 45%
    padding-right: 5px;
    display: inline-block
    text-align: right

  :last-child
    width: 45%
    padding-left: 5px;
    display: inline-block
    text-align: left

#droneStream
  zoom: 0.718
  margin-left: 23%
  canvas
    border-radius: 10px
    border: solid 1px #333